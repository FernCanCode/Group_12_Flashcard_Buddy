<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>

<AnchorPane xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controllers.StudyController">
   <children>
      <ImageView fitHeight="400.0" fitWidth="600.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@resources/Background.png" />
         </image>
      </ImageView>
      <Pane prefHeight="400.0" prefWidth="600.0">
         <children>
            <ImageView fitHeight="195.0" fitWidth="400.0" layoutX="101.0" layoutY="104.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@resources/Shadow.png" />
               </image>
            </ImageView>
            <ImageView fx:id="flashcard" fitHeight="175.0" fitWidth="380.0" layoutX="111.0" layoutY="114.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@resources/Front.png" />
               </image></ImageView>
            <Button fx:id="text" alignment="CENTER" layoutX="111.0" layoutY="114.0" mnemonicParsing="false" onAction="#flashcard" prefHeight="175.0" prefWidth="380.0" style="-fx-background-color: transparent;" text="CLICK HERE TO START" />
            <Button fx:id="previous" layoutX="14.0" layoutY="170.0" mnemonicParsing="false" onAction="#previous" prefHeight="60.0" prefWidth="60.0">
               <graphic>
                  <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@resources/LeftArrow.png" />
                     </image>
                  </ImageView>
               </graphic></Button>
            <Button fx:id="next" layoutX="526.0" layoutY="171.0" mnemonicParsing="false" onAction="#next" prefHeight="60.0" prefWidth="60.0">
               <graphic>
                  <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@resources/RightArrow.png" />
                     </image>
                  </ImageView>
               </graphic></Button>
            <TextField fx:id="card" alignment="CENTER" layoutX="142.0" layoutY="299.0" prefHeight="25.0" prefWidth="318.0" text="1" />
            <Button fx:id="delete" layoutX="273.0" layoutY="332.0" mnemonicParsing="false" onAction="#delete" prefHeight="40.0" prefWidth="40.0">
               <graphic>
                  <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@resources/Delete.png" />
                     </image>
                  </ImageView>
               </graphic></Button>
            <Button fx:id="clear" layoutX="345.0" layoutY="332.0" mnemonicParsing="false" onAction="#clear">
               <graphic>
                  <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@resources/Clear.png" />
                     </image>
                  </ImageView>
               </graphic></Button>
            <ToggleButton fx:id="shuffle" layoutX="201.0" layoutY="332.0" mnemonicParsing="false" onAction="#shuffle" prefHeight="40.0" prefWidth="40.0">
               <graphic>
                  <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@resources/Shuffle.png" />
                     </image>
                  </ImageView>
               </graphic></ToggleButton>
            <Button fx:id="exit" layoutX="26.0" layoutY="320.0" mnemonicParsing="false" onAction="#exit" prefHeight="60.0" prefWidth="60.0">
               <graphic>
                  <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@resources/Home.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
         </children>
      </Pane>
   </children>
</AnchorPane>
